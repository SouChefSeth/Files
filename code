static Scanner input = new Scanner(System.in);
	
	public static void main(String[] args) {
		
		System.out.print("Enter the number of students to enter: ");
		int numberOfStudents = input.nextInt();
		
		String[] students = repeatStudentNameInput(numberOfStudents);
		
		int[] studentsGrades = repeatGradeInput(students);
		
		input.close();
		
		sortAndPrintList(students, studentsGrades);
			
	}	
	
	public static String[] repeatStudentNameInput(int Numb) {
		
		String[] names = new String[Numb];
		for(int i = 0; i<Numb; i++) {
			System.out.print("Enter a students name: ");
			names[i] = input.next();
		}
		return names;
	}
	public static int[] repeatGradeInput(String[] names) {
		int[] grades = new int[names.length];
		for(int i = 0; i<grades.length; i++) {
			System.out.print("Enter " + names[i] +"'s grade:");
			grades[i] = input.nextInt();
		}
		return grades;
	}
	public static void sortAndPrintList(String[] names, int[] grades) {
		
		int TempNumb;
		String TempString;
		for (int i = 0; i<names.length-1; i++) {
			if (grades[i] > grades[i+1]) {
				
				TempNumb = grades[i];
				grades[i] = grades[i+1];
				grades[i+1] = TempNumb;
				
				TempString = names[i];
				names[i] = names[i+1];
				names[i+1] = TempString;
			}	
		}
		System.out.println();
		for (int i = names.length; i>0; i--) {
			System.out.println(names[i-1] + "'s grade is: " + grades[i-1]);
		}
	}
